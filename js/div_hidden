var currentElement = null
var n = 1

function div_afficher_cacher(div) {
    {
        if (currentElement != null)
            currentElement.style.visibility = "hidden";
        n++;
        if (n == 4) {
        n = 1;
        }

        currentElement = document.getElementById(div + n);
        currentElement.style.visibility = "visible";
        return true;
    }  
}